<h1>Meal Packages </h1>

<div class="mp-container">
     
        <div class="grid-container">
            {{#each mealpackage}}
            <div>
                <img class="img-fluid" src="/img/{{img}}" alt="Image for {{name}}"> 
                <p>Meal Package Name: {{name}}</p>
                <p>Meal Package Price: {{price}}</p>
                <p>Description: {{desc}}</p>
                <p>Meal Package Food Cateogry: {{category}}</p>
                <p>Number of meals inside package: {{Quantity}}</p>
                {{#if topMeal}}
                    <div class="col-md-2">This is a topMeal</div>
                {{else}}
                    <div class="col-md-2">This is not a topMeal</div>
                {{/if}}
                <div class=" col-md-1">
                    <a href="/edit?name={{name}}" class="btn btn-primary">Edit</a>
                </div>
                <div class=" col-md-1">
                    <a href="/delete?name={{name}}" class="btn btn-primary">Delete</a>
                </div>
            </div>
            {{else}}
            <h4>No Meal Packages were found</h4>
            {{/each}}
        </div>
        </br>
        
    {{!-- {{/if}} --}}
</div>